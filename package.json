{
	"name": "vscode-dtdl",
	"displayName": "DTDL",
	"version": "0.0.1",
	"private": false,
	"description": "This extension provides syntax highlighting to read and edit JSON documents using the Digital Twins Definition Language",
	"keywords": [
		"land"
	],
	"homepage": "HTTPS://GitHub.Com/CodeEditorLand/LandDtdl#readme",
	"bugs": {
		"url": "HTTPS://GitHub.Com/CodeEditorLand/LandDtdl/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+HTTPS://github.com/CodeEditorLand/LandDtdl.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "üåÜ‚ÄÅ‚Äî‚ÄÅLand‚ÄÅ‚Äî",
		"email": "Land@PlayForm.Cloud",
		"url": "HTTPS://Land.PlayForm.Cloud"
	},
	"type": "module",
	"main": "./dist/extension",
	"scripts": {
		"Document": "Document 'Source/**/*.ts'",
		"compile": "tsc -p ./",
		"prepublishOnly": "Build 'Source/**/*.ts'",
		"test:coverage": "jest --coverage",
		"webpack": "webpack --mode development"
	},
	"contributes": {
		"commands": [
			{
				"category": "DTDL",
				"command": "vscode-dtdl.createInterface",
				"title": "Create Interface"
			}
		],
		"grammars": [
			{
				"language": "colorized-channel",
				"path": "./syntaxes/colorized.channel.tmLanguage",
				"scopeName": "text.channel.colorized"
			}
		],
		"jsonValidation": [
			{
				"fileMatch": "*.json",
				"url": "./resources/jsonSchema.json"
			}
		],
		"languages": [
			{
				"id": "colorized-channel",
				"mimetypes": [
					"text/x-code-output"
				]
			}
		],
		"snippets": [
			{
				"language": "json",
				"path": "./snippets/snippets.json"
			}
		]
	},
	"activationEvents": [
		"onCommand:vscode-dtdl.createInterface",
		"onLanguage:json",
		"workspaceContains:**/*.json"
	],
	"dependencies": {
		"dtdl-language-server": "0.6.1",
		"fs-extra": "^7.0.1"
	},
	"devDependencies": {
		"@playform/build": "0.0.7",
		"@playform/document": "0.0.6",
		"@types/fs-extra": "^7.0.0",
		"@types/glob": "^7.1.1",
		"@types/node": "^10.12.21",
		"glob": "^7.1.4",
		"ts-loader": "^6.2.1"
	},
	"publishConfig": {
		"access": "public"
	},
	"icon": "logo.png",
	"aiKey": "[AIKEY PLACEHOLDER]"
}
